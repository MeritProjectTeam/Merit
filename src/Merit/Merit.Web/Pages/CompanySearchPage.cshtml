@page
@model Merit.Web.Pages.CompanySearchPageModel
@{
}

<h3>Find employee</h3>
<form method="get">
    <div>
        Enter required merits: <input type="text" asp-for="SearchMerit" />
        <div>
            <button type="submit">Search</button>
        </div>
        <hr />
        <div>
            Enter required skills: <input type="text" asp-for="SearchSkills" />
        </div>
        <button asp-page-handler="">Ur funktion</button>
        <hr />
        <div>
            Enter required education: <input type="text" asp-for="SearchEducation" />
        </div>
        <button asp-page-handler="">Ur funktion</button>
    </div>
</form>
<hr />
<ol>
    @foreach (var x in Model.TheOne)
    {
        @x.FirstName
        @foreach (var y in x.Merits)
        {
            <li>
                @y.Title
                @y.Category
            </li>
        }
    }
</ol>