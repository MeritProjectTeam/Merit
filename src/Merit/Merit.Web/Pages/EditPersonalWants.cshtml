@page
@model Merit.Web.Pages.EditPersonalWantsModel
@{
}
<nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
    <a class="navbar-brand js-scroll-trigger" href="#page-top">
        <span class="d-block d-lg-none">MERIT</span>
        <span class="d-none d-lg-block"><img class="img-fluid img-profile rounded-circle mx-auto mb-2" src="/images/merit2.png" alt="" /></span>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link js-scroll-trigger" asp-page="/PersonalInfoPage">Profilsida</a></li>

            <li class="nav-item"><a class="nav-link js-scroll-trigger" asp-page="/LogOut">Logga ut</a></li>

        </ul>
    </div>
</nav>
<form method="post">
    <div class="container">
        <div class="row">



            <div class="col-md-4 mb-5">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="card-header">
                            <h4 class="card-title">Wants</h4>
                        </div>
                        <p></p>
                        <p class="card-text">
                            @foreach (var want in Model.PersonalWantsList)
                            {

                                <div>
                                    Want: @want.Want
                                </div>
                                <div><a href="?SelectedPersonalWantId=@want.PersonalWantsID">Välj att redigera</a></div>
                                <hr />
                            }
                        </p>
                    </div>
                    <div class="card-footer">

                    </div>
                </div>
            </div>


            <div class="col-lg-3" row="10">
                <p><h4 c>Redigera</h4></p>
                <input type="hidden" value="@Model.SelectedPersonalWantId" asp-for="PWant.PersonalWantsID" />
                <div><input type="text" value="@Model.WantText" asp-for="PWant.Want" /></div>

                @if (Model.SelectedPersonalWantId > 0)
                {
                    <span class="justify-content-between mb-2">
                        <span style="display:none" id="x">
                            <button type="submit" class="btn btn-primary" asp-page-handler="Edit">Yes</button>
                            <a href="#" onclick="ConfirmQ(false)" class="btn btn-primary">No</a>
                        </span>
                        <span id="y">
                            <a href="#" onclick="ConfirmQ(true)" class="btn btn-danger">Change Merit</a>
                        </span>
                    </span>

                    <span class="justify-content-between mb-2">
                        <span style="display:none" id="a">
                            <button type="submit" class="btn btn-primary" asp-page-handler="Delete">Yes</button>
                            <a href="#" onclick="ConfirmX(false)" class="btn btn-primary">No</a>
                        </span>
                        <span id="b">
                            <a href="#" onclick="ConfirmX(true)" class="btn btn-danger">Delete Merit</a>
                        </span>
                    </span>
                }
                <div>
                    @if (Model.Visi)
                    {
                        <br />
                        <br />
                        <div class="alert alert-success">
                            @Model.Message
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</form>