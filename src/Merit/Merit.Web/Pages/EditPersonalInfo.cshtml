@page
@model Merit.Web.Pages.EditPersonalInfoModel
@{
}

<h3>Uppdatera profilinformation</h3>
<div class="row">
    <div class="col-12">
        @if (Model.Visi)
        {
            <br />

            <div class="alert alert-success">
                @Model.Information
            </div>
        }
    </div>

</div>
<hr />

<div class="row">
    
    <div class="col-4">
        <form method="post">




            <input type="hidden" asp-for="APerson.PersonalInfoId" />
            <div class="justify-content-between mb-2">
                <label for="firstname">Förnamn</label>
                <input class="form-control" asp-for="APerson.FirstName" type="text" value="@Model.APerson.FirstName" />
            </div>
            <div class="justify-content-between mb-2">
                <label for="lastname">Efternamn</label>
                <input class="form-control" asp-for="APerson.LastName" type="text" value="@Model.APerson.LastName" />
            </div>

            <div class="justify-content-between mb-2">
                <label for="dateofbirth">Födelseår</label>
                <input class="form-control" asp-for="APerson.DateOfBirth" type="date"/>
            </div>
            <div class="justify-content-between mb-2">
                <label for="street">Gatuadress</label>
                <input class="form-control" asp-for="APerson.Street" type="text" value="@Model.APerson.Street" />
            </div>
            <div class="justify-content-between mb-2">
                <label for="zipcode">Postnummer</label>
                <input class="form-control" asp-for="APerson.ZipCode" type="text" value="@Model.APerson.ZipCode" />
            </div>
            <div class="justify-content-between mb-2">
                <label for="city">Ort</label>
                <input class="form-control" asp-for="APerson.City" type="text" value="@Model.APerson.City" />
            </div>
            <div class="justify-content-between mb-2">
                <label for="phone">Telefon</label>
                <input class="form-control" asp-for="APerson.PhoneNumber" type="text" value="@Model.APerson.PhoneNumber" />
            </div>

            <p></p>

            <div class="justify-content-between mb-2">
                <button class="btn btn-primary" type="submit">Spara</button>
                <a href="/CompanyInfoPage" class="btn btn-primary">Profilinfo</a>
            </div>


        </form>
    </div>

    <div class="col-4" style="vertical-align:bottom">
        <form method="post" asp-page-handler="Delete">
            <span> Jag vill ta bort mitt konto.</span>
            <span style="display:none" id="a">
                <a style="display:block;width:200px" href="#" onclick="ConfirmX(false)" class="btn btn-primary">Ångra</a>
                <button style="display:block;width:200px" class="btn btn-danger mt-1" type="submit">Ta bort</button>
            </span>
            <span id="b">
                <a href="#" style="display:block;width:200px" onclick="ConfirmX(true)" class="btn btn-danger">Ta bort kontot</a>
            </span>



        </form>
    </div>
</div>



