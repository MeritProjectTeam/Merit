@page
@model Merit.Web.Pages.LogInModel
@{
}

<h3>Logga in</h3>
<hr />
<div class="row">
<form method="post" class="col">
    <div class="row">
        <div class="col-lg-3">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group justify-content-between mb-2">
                <label asp-for="Input.Email"></label>
                <input class="form-control" asp-for="Input.Email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group justify-content-between mb-2">
                <label asp-for="Input.Password"></label>
                <input class="form-control" asp-for="Input.Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group justify-content-between mb-2">
        <button class="btn btn-primary" type="submit">Logga in</button>
    </div>
</form>
    <div class="col">
        <h3>BankID</h3>
        <button type="button">Logga in med BankID</button>
    </div>
</div>

@section Scripts{ 
    <partial name="_ValidationScriptsPartial" />
}