@page
@model Merit.Web.Pages.AddMeritBusinessModel
@{
}

<h3>Lägg till en merit</h3>
<hr />

<form method="post">
    <div class="row">
        <div class="col-lg-5">
            <div class="justify-content-between mb-2">
                <label>Kategori:</label>
                <input class="form-control" type="text" asp-for="ACompanyMerit.Category" placeholder="Kategori" />
            </div>
            <div class="justify-content-between mb-2">
                <label>Underkategori:</label>
                <input class="form-control" type="text" asp-for="ACompanyMerit.SubCategory" placeholder="Underkategori" />
            </div>
            <div class="justify-content-between mb-2">
                <label>Beskrivning:</label>
                <textarea style="resize: none" class="form-control" type="text" asp-for="ACompanyMerit.Description" placeholder="Beskrivning" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
        </div>
    </div>
    <p></p>
    <div class="justify-content-between mb-2">
        <button class="btn btn-primary" type="submit">Lägg till merit</button>
        <a class="btn btn-primary" asp-page="/companyinfopage">Företagsinfo</a>
        @if (Model.SavedBusinessMerit)
        {
            <meta http-equiv="refresh" content="1">
            <div style="color: limegreen">
                <b>Merit skapad!</b>
            </div>
        }
    </div>
</form>
