@page
@model Merit.Web.Pages.EditPersonalMeritsModel
@{
}

<form method="post">
    <div class="container">
        <div class="row">

            <div class="col-12">
                @if (Model.Visi)
                {
                    <br />
                    <br />
                    <div class="alert alert-success">
                        @Model.Message
                    </div>
                }
            </div>
        </div>
        <div class="row">

            <div class="col-md-4 mb-5">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="card-header">
                            <h4 class="card-title">Meriter</h4>
                        </div>
                        <p></p>
                        <p class="card-text">
                            @foreach (var merit in Model.MeritList)
                            {

                                <div>
                                    Kategori: @merit.Category
                                </div>
                                <div>
                                    Underkategori: @merit.SubCategory
                                </div>
                                <div>
                                    Beskrivning: @merit.Description
                                </div>
                                <div>
                                    Varaktighet: @merit.Duration
                                </div>
                                <div><a href="?SelectedMeritID=@merit.PersonalMeritId">Välj att redigera</a></div>
                                <hr />
                            }
                        </p>
                    </div>
                    <div class="card-footer">

                    </div>
                </div>
            </div>

            @*@foreach (var merit in Model.MeritList)
            {
                <hr />
                <p>@merit.Category</p>
                <p>@merit.SubCategory</p>
                <p>@merit.Description</p>
                <p>@merit.Duration</p>
                <p><a href="?SelectedMeritID=@merit.PersonalMeritId">Select</a></p>
            }*@



            <div class="col-lg-3" row="10">
                <p><h4 c>Redigera</h4></p>
                <input type="hidden" value="@Model.SelectedMeritID" asp-for="PMerit.PersonalMeritId" />
                <div><input type="text" value="@Model.CategoryText" asp-for="PMerit.Category" /></div>
                <div><input type="text" value="@Model.SubCategoryText" asp-for="PMerit.SubCategory" /></div>
                <div><input type="text" value="@Model.DescriptionText" asp-for="PMerit.Description" /></div>
                <div><input type="text" value="@Model.DurationText" asp-for="PMerit.Duration" /></div>
                @if (Model.SelectedMeritID > 0)
                {
                    <br />
                    <span class="justify-content-between mb-2">
                        <span style="display:none" id="x">
                            <button type="submit" class="btn btn-primary" asp-page-handler="Edit">Ändra</button>
                            <a href="#" onclick="ConfirmQ(false)" class="btn btn-primary">Ångra</a>
                        </span>
                        <span id="y">
                            <a href="#" onclick="ConfirmQ(true)" class="btn btn-primary">Ändra merit</a>
                        </span>
                    </span>

                    <span class="justify-content-between mb-2">
                        <span style="display:none" id="a">
                            <button type="submit" class="btn btn-primary" asp-page-handler="Delete">Ta bort</button>
                            <a href="#" onclick="ConfirmX(false)" class="btn btn-primary">Ångra</a>
                        </span>
                        <span id="b">
                            <a href="#" onclick="ConfirmX(true)" class="btn btn-danger">Ta bort merit</a>
                        </span>
                    </span>
                }
                <br />
                <br />
                <a class="btn btn-primary " asp-page="/companyinfopage">Företagsinfo</a>



            </div>
        </div>
    </div>
</form>