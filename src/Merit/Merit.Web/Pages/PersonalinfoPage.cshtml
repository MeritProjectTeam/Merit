@page
@model Merit.Web.Pages.PersonalinfoPageModel
@using Merit.ProfileService
@{
}

<h3>Hello, @Model.FirstName</h3>
<div>
    <div>
        Name: @Model.FirstName @Model.LastName
    </div>
    <div>
        Date of Birth: @Model.DateOfBirth
    </div>
    <hr />
    <div>
        Email: @Model.Email
    </div>
    <div>
        Tele#: @Model.Phone
    </div>
    <hr />
    <div>
        Street: @Model.Street
    </div>
    <div>
        Zip: @Model.Zipcode
    </div>
    <div>
        City: @Model.City
    </div>
    <button onclick="window.location.href='/EditPersonalInfo'">Edit Personal Information</button>
</div>
<div>
    Merits
</div>
<div>
    <ol>
        @foreach (var x in Model.personalMerits)
	    {
		 <li>
             @x.Category;
         </li>
         <li>
             @x.SubCategory
         </li>
         <li>
             @x.Description
         </li>
	    }
    </ol>
    <button>Add New Merit</button>
</div>
<hr />
