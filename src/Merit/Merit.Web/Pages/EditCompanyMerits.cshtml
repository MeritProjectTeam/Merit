@page
@model Merit.Web.Pages.EditCompanyMeritsModel
@{
}

<form method="post">
    <div class="container">
        <div class="row">
            <div class="col-12">
                @if (Model.Visi)
                {
                    @if (Model.Success)
                    {
                        <div class="alert alert-success">
                            @Model.Message
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            @Model.Message
                        </div>
                    }
                }
            </div>
        </div>
        <div class="row">



            <div class="col-md-4 mb-5">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="card-header">
                            <h4 class="card-title">Meriter</h4>
                        </div>
                        <p></p>
                        <p class="card-text">
                            @foreach (var merit in Model.CompanyMeritList)
                            {

                                <div>
                                    Kategori: @merit.Category
                                </div>
                                <div>
                                    Underkategori: @merit.SubCategory
                                </div>
                                <div>
                                    Beskrivning: @merit.Description
                                </div>

                                <div><a href="?SelectedMeritID=@merit.CompanyMeritId">Välj att redigera</a></div>
                                <hr />
                            }
                        </p>
                    </div>
                    <div class="card-footer">

                    </div>
                </div>
            </div>


            <div class="col-lg-3" row="10">
                <p><h4 c>Redigera</h4></p>
                <input type="hidden" value="@Model.SelectedMeritID" asp-for="CMerit.CompanyMeritId" />
                <div><input type="text" value="@Model.CategoryText" asp-for="CMerit.Category" /></div>
                <div><input type="text" value="@Model.SubCategoryText" asp-for="CMerit.SubCategory" /></div>
                <div><input type="text" value="@Model.DescriptionText" asp-for="CMerit.Description" /></div>




                @if (Model.SelectedMeritID > 0)
                {
                    <br />
                    <span class="justify-content-between mb-2">
                        <span style="display:none" id="x">
                            <button type="submit" class="btn btn-primary m-1" asp-page-handler="Edit">Ändra</button>
                            <a href="#" onclick="ConfirmQ(false)" class="btn btn-primary m-1">Ångra</a>
                        </span>
                        <span id="y">
                            <a href="#" onclick="ConfirmQ(true)" class="btn btn-primary m-1">Ändra merit</a>
                        </span>
                    </span>

                    <span class="justify-content-between mb-2">
                        <span style="display:none" id="a">
                            <button type="submit" class="btn btn-danger m-1" asp-page-handler="Delete">Ta bort</button>
                            <a href="#" onclick="ConfirmX(false)" class="btn btn-primary m-1">Ångra</a>
                        </span>
                        <span id="b">
                            <a href="#" onclick="ConfirmX(true)" class="btn btn-danger m-1">Ta bort merit</a>
                        </span>
                    </span>
                }

                <br />
                <br />
                <a class="btn btn-primary " asp-page="/companyinfopage">Företagsinfo</a>
            </div>
        </div>
    </div>
</form>