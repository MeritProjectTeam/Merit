@page
@model Merit.Web.Pages.ShowJobAdvertisementModel
@{
}
<nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
    <a class="navbar-brand js-scroll-trigger" href="#page-top">
        <span class="d-block d-lg-none">MERIT</span>
        <span class="d-none d-lg-block"><img class="img-fluid img-profile rounded-circle mx-auto mb-2" src="/images/merit2.png" alt="" /></span>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link js-scroll-trigger" asp-page="/CompanyInfoPage">Företagssida</a></li>

            <li class="nav-item"><a class="nav-link js-scroll-trigger" asp-page="/LogOut">Logga ut</a></li>

        </ul>
    </div>
</nav>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-8 mb-5">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="card-header">
                            <h4 class="card-title">@Model.CompanyInfo.CompanyName: @Model.CompanyAdvertisement.Profession</h4>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <p>Placering:</p>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.CompanyAdvertisement.Place</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <p>Omfattning:</p>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.CompanyAdvertisement.Extent</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <p>Tid/längd:</p>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.CompanyAdvertisement.Duration</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <p>Anställningsform:</p>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.CompanyAdvertisement.FormOfEmployment</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <p>Information om tjänsten:</p>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.CompanyAdvertisement.Information</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <p>Löneinformation:</p>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.CompanyAdvertisement.Salary</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <p>Företagets/tjänstens meriter:</p>
                            </div>
                            <div class="col-md-6">
                                @foreach (var merit in Model.AdvertisementMerits)
                                {
                                    <span>* @merit.Category - @merit.SubCategory - @merit.Description</span><br/>
                                }
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <p>Företagets/tjänstens wants:</p>
                            </div>
                            <div class="col-md-6">
                                @foreach (var want in Model.AdvertisementWants)
                                {
                                    <span>* @want.Want</span><br/>
                                }
                            </div>
                        </div>
                        <div class="card-footer">
                            
                        </div>
                    </div>
            </div>
        </div>
    </div>
</body>